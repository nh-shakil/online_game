<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context=".ui.activities.LudoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/newblue"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">
        <ImageView
            android:id="@+id/backinludo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/left_aero"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ludotitleid"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="GAME NAME"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="@dimen/payu_dimen_22dp"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/newred">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/follow"
                android:layout_marginHorizontal="4dp"
                android:gravity="center"
                android:text="Follow"
                android:textSize="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/notificationinludo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/notificationicon"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/newblue"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarnew"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/newblue">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutnew"
                android:background="@color/newblue"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/white"/>
        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagernew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeid"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:drawableTint="@color/white"
            android:drawableTop="@drawable/leaderboard"
            android:text="Leaderboard" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/refershid"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_refresh"
            android:text="Refresh" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/creatcontestid"
            android:drawableTop="@drawable/resize_add_game_icon"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:text="Create Contest" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friendid"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_buddylist"
            android:text="Friends" />

    </LinearLayout>

</LinearLayout>